<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.revolutiontech.flaborfit.MainActivity"
    android:weightSum="3">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/rounded_corners"
        android:backgroundTint="#2CA5F5"
        android:layout_weight="1"
        android:layout_marginBottom="5dp"
        android:id="@+id/weightBtn">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/weight"
            android:id="@+id/imageView"
            android:layout_centerInParent="true" />

        <TextView
            android:text="30%"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView"
            android:textSize="40sp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:paddingRight="5dp"
            android:textColor="@android:color/background_light" />

        <TextView
            android:text="10 sets"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:id="@+id/textView3"
            android:textColor="@android:color/background_light"
            android:textSize="20sp"
            android:paddingRight="10dp"
            android:paddingTop="5dp"
            android:background="@drawable/rounded_corners"
            android:textAlignment="textEnd"
            android:backgroundTint="#20000000" />

        <TextView
            android:text="Do you even lift?"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/captionTxt"
            android:textSize="18sp"
            android:layout_below="@+id/imageView"
            android:layout_alignParentStart="true"
            android:paddingLeft="10dp"
            android:textColor="@android:color/background_light"
            android:paddingBottom="5dp" />

        <TextView
            android:text="Weight Lifting"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/activityNameTxt"
            android:textSize="20sp"
            android:paddingLeft="10dp"
            android:textColor="@android:color/background_light"
            android:paddingBottom="4dp"
            android:layout_alignParentBottom="false"
            android:layout_alignParentStart="true"
            android:layout_above="@+id/captionTxt" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/rounded_corners"
        android:backgroundTint="#916BCD"
        android:layout_weight="1"
        android:id="@+id/yogaBtn">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/lotus"
            android:id="@+id/imageView"
            android:layout_centerInParent="true" />

        <TextView
            android:text="15%"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView"
            android:textSize="40sp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:paddingRight="5dp"
            android:textColor="@android:color/background_light" />

        <TextView
            android:text="1 hour"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:id="@+id/textView3"
            android:textColor="@android:color/background_light"
            android:textSize="20sp"
            android:paddingRight="10dp"
            android:paddingTop="5dp"
            android:background="@drawable/rounded_corners"
            android:textAlignment="textEnd"
            android:backgroundTint="#20000000" />

        <TextView
            android:text="Namaste"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/captionTxt"
            android:textSize="18sp"
            android:layout_below="@+id/imageView"
            android:layout_alignParentStart="true"
            android:paddingLeft="10dp"
            android:textColor="@android:color/background_light"
            android:paddingBottom="5dp" />

        <TextView
            android:text="Yoga"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/activityNameTxt"
            android:textSize="20sp"
            android:paddingLeft="10dp"
            android:textColor="@android:color/background_light"
            android:paddingBottom="4dp"
            android:layout_alignParentBottom="false"
            android:layout_alignParentStart="true"
            android:layout_above="@+id/captionTxt" />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/rounded_corners"
        android:backgroundTint="#52AD56"
        android:layout_weight="1"
        android:layout_marginTop="5dp"
        android:id="@+id/cardioBtn">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/heart"
            android:id="@+id/imageView"
            android:layout_centerInParent="true" />

        <TextView
            android:text="22%"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView"
            android:textSize="40sp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:paddingRight="5dp"
            android:textColor="@android:color/background_light" />

        <TextView
            android:text="5 miles"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:id="@+id/textView3"
            android:textColor="@android:color/background_light"
            android:textSize="20sp"
            android:paddingRight="10dp"
            android:paddingTop="5dp"
            android:background="@drawable/rounded_corners"
            android:textAlignment="textEnd"
            android:backgroundTint="#20000000" />

        <TextView
            android:text="Run like crazy"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/captionTxt"
            android:textSize="18sp"
            android:layout_below="@+id/imageView"
            android:layout_alignParentStart="true"
            android:paddingLeft="10dp"
            android:textColor="@android:color/background_light"
            android:paddingBottom="5dp" />

        <TextView
            android:text="Cardio"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/activityNameTxt"
            android:textSize="20sp"
            android:paddingLeft="10dp"
            android:textColor="@android:color/background_light"
            android:paddingBottom="4dp"
            android:layout_alignParentBottom="false"
            android:layout_alignParentStart="true"
            android:layout_above="@+id/captionTxt" />
    </RelativeLayout>

</LinearLayout>
